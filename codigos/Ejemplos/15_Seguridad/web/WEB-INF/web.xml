<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>AUTORIZACION_DD_CONFIDENCIAL</display-name>
        <web-resource-collection>
            <web-resource-name>Alta Clientes HTTPS</web-resource-name>
            <description/>
            <url-pattern>/servicios/seguridad/dd/clientes/confidential</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>administrador</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>PRUEBA DD</display-name>
        <web-resource-collection>
            <web-resource-name>GET SEGURO</web-resource-name>
            <description/>
            <url-pattern>/servicios/seguridad/dd/clientes/cuantos</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Cuantos_Cliente</display-name>
        <web-resource-collection>
            <web-resource-name>cliente</web-resource-name>
            <description/>
            <url-pattern>/servicios/seguridad/dd/clientes/cuantos/cliente</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>cliente</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Cuantos_Administrador</display-name>
        <web-resource-collection>
            <web-resource-name>Administrador</web-resource-name>
            <description/>
            <url-pattern>/servicios/seguridad/dd/clientes/cuantos/administrador</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>administrador</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>myrealm</realm-name>
    </login-config>
    <security-role>
        <description/>
        <role-name>administrador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>cliente</role-name>
    </security-role>
</web-app>
